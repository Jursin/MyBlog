---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
import MainCard from "@/components/MainCard.astro";
import GitHubStats from "@/components/mdx/GitHubStats.astro";
import RepositoryCard from "@/components/mdx/RepositoryCard.astro";
---

<BaseLayout title="项目">
  <MainCard infoIcon="lucide:code-2">
    <!-- 主要仓库 -->
    <section class="py-4">
      <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
        <Icon name="lucide:star" class="w-6 h-6 text-primary" />
        <span>主要仓库</span>
      </h2>

      <GitHubStats
        username="Jursin"
        repositoryName="Awesome-Class-Softwares"
        showLanguages={true}
        showContributors={true}
      />
    </section>

    <!-- 其它仓库 -->
    <section class="py-4">
      <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
        <Icon name="lucide:folder" class="w-6 h-6 text-primary" />
        <span>其它仓库</span>
      </h2>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <RepositoryCard repo="Jursin/MyNav" isPinned={true} />
        <RepositoryCard repo="Jursin/MC-Guide" isPinned={true} />
        <RepositoryCard repo="Jursin/Awesome-Class-Softwares-Web" isPinned={true} />
        <RepositoryCard repo="Jursin/ACS-Web" />
        <RepositoryCard repo="Jursin/GeoBox-Web" />
      </div>

      <div class="flex justify-center mt-10">
        <a
          href="https://github.com/Jursin?tab=repositories"
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-outline gap-2"
        >
          <Icon name="lucide:github" class="w-5 h-5" />
          <span>在 GitHub 上查看更多</span>
        </a>
      </div>
    </section>
  </MainCard>
</BaseLayout>
