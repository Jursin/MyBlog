---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
import MainCard from "@/components/MainCard.astro";
import LinkCard from "@/components/mdx/LinkCard.astro";
---

<BaseLayout title="首页">
  <MainCard infoIcon="lucide:info">
    <div class="space-y-8">
      <!-- Hero Section -->
      <section class="py-6">
        <div class="flex flex-col items-center text-center">
          <h1
            class="text-4xl font-bold mb-4 bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent leading-loose"
          >
            🌟 Jursin 的博客
          </h1>
          <p class="text-xl text-base-content/80 max-w-3xl mb-8">一个由 Astro 驱动、使用 Frosti 主题的个人博客。</p>
          <div class="flex flex-wrap gap-4 justify-center">
            <a href="/blog" class="btn btn-primary gap-2 btn-shine-effect">
              <Icon name="lucide:book-open" class="w-5 h-5" />
              <span>我的博客</span>
            </a>
            <a href="https://github.com/Jursin/MyBlog" target="_blank" class="btn btn-outline gap-2">
              <Icon name="lucide:github" class="w-5 h-5" />
              <span>GitHub 仓库</span>
            </a>
          </div>
        </div>
      </section>

      <section>
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
          <span>我的网站</span>
        </h2>
        <LinkCard title="MyNav" desc="我的导航站" url="https://nav.jursin.top" img="https://nav.jursin.top/nav.png" />
        <LinkCard
          title="MC-Guide"
          desc="Minecraft 入门教程"
          url="https://mc-guide.jursin.top"
          img="https://mc-guide.jursin.top/logo.png"
        />

        <LinkCard
          title="Awesome-Class-Softwares-Web"
          desc="适用于班级一体机的优质软件合集🌟"
          url="https://awesome-class-softwares.jursin.top"
          img="https://theme-hope-assets.vuejs.press/logo.svg"
        />
        <LinkCard
          title="ACS-Web"
          desc="新搭建的 ACS 网站"
          url="https://acs-next.jursin.top"
          img="https://acs-next.jursin.top/_astro/avatar.g4D3QZBA_ZQUMVS.webp"
        />
      </section>
    </div>
  </MainCard>
</BaseLayout>
