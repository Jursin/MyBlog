---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
import MainCard from "@/components/MainCard.astro";
import GitHubStats from "@/components/mdx/GitHubStats.astro";
---

<BaseLayout title="About">
  <MainCard infoIcon="lucide:user">
    <div class="space-y-10 mb-8">
      <!-- Profile Section -->
      <section class="flex flex-col md:flex-row gap-8 items-center md:items-start">
        <div class="avatar">
          <div
            class="w-32 h-32 md:w-40 md:h-40 rounded-xl ring ring-primary ring-offset-base-100 ring-offset-2 overflow-hidden"
          >
            <img src="https://github.com/Jursin.png" alt="Jursin" width="160" height="160" loading="eager" />
          </div>
        </div>

        <div class="flex-1 text-center md:text-left">
          <h1 class="text-3xl md:text-4xl font-bold mb-2">Jursin</h1>
          <p class="text-xl text-base-content/80 mb-4">开发者 & 学生</p>

          <div class="flex flex-wrap gap-3 justify-center md:justify-start mb-6">
            <a
              href="https://github.com/Jursin"
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-sm btn-outline gap-2"
            >
              <Icon name="fa-brands:github" class="w-4 h-4" />
              <span>GitHub</span>
            </a>
            <a href="mailto:NetShell53@gmail.com" class="btn btn-sm btn-outline gap-2">
              <Icon name="material-symbols:mail" class="w-4 h-4" />
              <span>邮箱</span>
            </a>
            <a href="https://qm.qq.com/q/JpIhKxU5Uc" class="btn btn-sm btn-outline gap-2">
              <Icon name="fa-brands:qq" class="w-4 h-4" />
              <span>QQ</span>
            </a>
            <a href="https://t.me/Hello_Jurisn" class="btn btn-sm btn-outline gap-2">
              <Icon name="fa-brands:telegram" class="w-4 h-4" />
              <span>Telegram</span>
            </a>
          </div>

          <p class="text-base-content/80">嗨！我是 Jursin，一名刚刚毕业的高中生，热爱编程和技术，喜欢探索新事物。</p>
        </div>
      </section>

      <!-- GitHub Stats -->
      <section>
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
          <Icon name="lucide:github" class="w-6 h-6 text-primary" />
          <span>GitHub 数据</span>
        </h2>
        <GitHubStats username="Jursin" showLanguages={false} showCommitGraph={true} />
      </section>

      <!-- Contribution Activity -->
      <section>
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
          <Icon name="lucide:activity" class="w-6 h-6 text-primary" />
          <span>最近活动</span>
        </h2>

        <div class="bg-base-200 rounded-xl p-6 overflow-x-auto">
          <div class="flex flex-col md:flex-row gap-8 md:gap-4 md:overflow-x-auto md:pb-2">
            {
              [
                {
                  date: "2023年3月18日",
                  title: "注册 GitHub 账号",
                },
                {
                  date: "2024年8月1日",
                  title: "创建第一个 GitHub 仓库",
                },
                {
                  date: "2024年8月23日",
                  title: "创建 Awesome-Class-Softwares 仓库",
                },
              ].map((item, i) => (
                <div class="relative flex gap-4 pb-2 md:pb-0 md:min-w-[250px]">
                  <div class="flex flex-col items-center">
                    <div class="w-10 h-10 rounded-full bg-primary flex items-center justify-center text-primary-content text-xl">
                      {i + 1}
                    </div>
                    <div class="w-0.5 h-16 bg-base-300 mt-2 md:hidden" />
                  </div>
                  <div>
                    <div class="text-sm text-base-content/60 mb-1">{item.date}</div>
                    <h3 class="text-lg font-bold">{item.title}</h3>
                  </div>
                </div>
              ))
            }
          </div>
        </div>
      </section>
    </div>
  </MainCard>
</BaseLayout>
